---
import { ClientRouter } from "astro:transitions";
import PrimaryNavigation from "../components/PrimaryNavigation/Navbar.astro";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-S2873ZKCB2"
    ></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-S2873ZKCB2");
    </script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="bg-slate-100 dark:bg-slate-800 text-slate-950 dark:text-slate-100"
  >
    <PrimaryNavigation />

    <div class="container mx-auto py-4" transition:animate="slide">
      <slot />
    </div>
  </body>
</html>
